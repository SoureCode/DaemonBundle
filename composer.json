{
    "name": "sourecode/daemon-bundle",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "SoureCode\\Bundle\\Daemon\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SoureCode\\Bundle\\Daemon\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "chapterjason",
            "email": "jason@sourecode.dev"
        }
    ],
    "scripts": {
        "test": [
            "simple-phpunit"
        ]
    },
    "require": {
        "php": ">=8.2",
        "ext-posix": "*",
        "ext-pcntl": "*",
        "symfony/http-kernel": "^6.3",
        "psr/clock": "^1.0",
        "symfony/console": "^6.3",
        "symfony/process": "^6.3",
        "symfony/config": "^6.3",
        "symfony/dependency-injection": "^6.3",
        "symfony/finder": "^6.3"
    },
    "require-dev": {
        "nyholm/symfony-bundle-test": "^2.0",
        "phpunit/phpunit": "^9.5",
        "symfony/browser-kit": "^6.3",
        "symfony/css-selector": "^6.3",
        "symfony/phpunit-bridge": "^6.3",
        "symfony/clock": "^6.3",
        "symfony/runtime": "^6.3",
        "symfony/monolog-bundle": "^3.8"
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": false
        }
    }
}
